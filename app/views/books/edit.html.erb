<% if flash[:error].present? %>
<div class="alert alert-danger">
<%= "#{@error_count} errors prohibited this book from being saved:" %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, url:"/books/#{@book.id}" , method: :patch do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>
<% end %>

  <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", "/books" %>



